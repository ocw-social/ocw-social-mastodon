{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build image locally",
            "detail": "Build the OCW.Social container image locally.",
            "icon": {
                "id": "package",
                "color": "terminal.ansiCyan"
            },
            "type": "docker-build",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "tag": "ocwsocial-local:latest",
                "platform": "${input:containerPlatform}"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build image locally (No cache)",
            "detail": "Build the OCW.Social container image locally and don't use the cache.",
            "icon": {
                "id": "package",
                "color": "terminal.ansiYellow"
            },
            "type": "docker-build",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "tag": "ocwsocial-local:latest",
                "platform": "${input:containerPlatform}",
                "customOptions": "--no-cache"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "containerPlatform",
            "type": "pickString",
            "description": "Select the container platform to build for.",
            "default": "linux/amd64",
            "options": [
                "linux/amd64",
                "linux/arm64"
            ]
        }
    ]
}